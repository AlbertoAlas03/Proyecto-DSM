<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Texto de la pregunta" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opciones de respuesta:"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextOpcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción 1" />

        <EditText
            android:id="@+id/editTextOpcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción 2" />

        <EditText
            android:id="@+id/editTextOpcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción 3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona la respuesta correcta:"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupRespuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioOpcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 1" />

            <RadioButton
                android:id="@+id/radioOpcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 2" />

            <RadioButton
                android:id="@+id/radioOpcion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 3" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonGuardarPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Pregunta"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>